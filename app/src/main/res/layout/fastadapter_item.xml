<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="07:07:07:007:"
        android:paddingStart="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingEnd="8dp"
        android:textColor="@color/colorTime"
        android:textSize="14sp"
        android:layout_centerVertical="true"/>
    <ImageView
        android:layout_width="14sp"
        android:layout_height="14sp"
        android:id="@+id/loglevel"
        android:layout_toEndOf="@id/time"
        tools:background="@drawable/i"
        android:scaleType="center"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="This is a sample logf hdfbdfbdbdgbdgbd gbdg bdgbgbgbfdfbfd dbfbgbgbgfbfgbfgb"
        android:layout_toEndOf="@id/loglevel"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingEnd="4dp"
        android:paddingStart="8dp"
        android:textSize="14sp"
        android:layout_centerVertical="true"/>

</RelativeLayout>